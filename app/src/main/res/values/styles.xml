<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="titleFontStyle">
        <item name="android:text">@string/app_name</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textStyle">bold|italic</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_marginTop">@dimen/v_margin</item>
        <item name="android:textAppearance">@style/Base.TextAppearance.AppCompat.Title</item>
        <item name="android:textSize">@dimen/title_title_size</item>
        <item name="android:textColor">@color/white_smoke</item>/>
    </style>
</resources>
